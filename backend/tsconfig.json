{
  "compilerOptions": {
    /* === Entorno Node === */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],

    /* === Estructura del proyecto === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Seguridad y buenas pr√°cticas === */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* === Performance === */
    "skipLibCheck": true
  }
}